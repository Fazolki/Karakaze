#!/bin/bash

# Path to your virtual environment's Python
PY="$HOME/Karakaze/myvenv/bin/python"

# Start server.py using the virtualenv Python
echo "[INFO] Starting server.py..."
"$PY" server.py &
SERVER_PID=$!

# Wait a few seconds to allow the server to start
sleep 5

# Start localtunnel with custom subdomain
echo "[INFO] Launching LocalTunnel at https://karakaze.loca.lt"
lt --port 8080 --subdomain karakaze

# Kill the server when tunnel closes
kill $SERVER_PID
